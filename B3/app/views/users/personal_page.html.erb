<h3>欢迎 <%= @username %></h3>
<h3>我的文章</h3>
<table width="100%"; style="table-layout: fixed;">
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th>分类</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse_each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <div class="innerCtn">
<span class="mui-ellipsis-3"><p><td style="white-space:nowrap;overflow: hidden;text-overflow:ellipsis"><%= post.body %></td></span>
</p></div>

        <td><%= post.categories %></td>
        <td><%= link_to '阅读全文', post %></td>
        <td><%= link_to '编辑', edit_post_path(post) %></td>
        <td><%= link_to '删除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
<%= will_paginate @posts %>
  </tbody>
</table>
