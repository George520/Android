<h3><%= @notice %></h3>
<table width="100%"; style="table-layout: fixed;">
  <thead>
    <tr>
      <th>作者</th>
      <th>标题</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.postable.username %></td>
        <td><%= post.title %></td>
        <td><%= link_to '阅读全文', check_show_path(post.id) %></td>
      </tr>
    <% end %>
    <%= will_paginate @posts %>
  </tbody>
</table>
